<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="80" vgap="60">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <Button text="ClearAll" GridPane.rowIndex="0" GridPane.columnIndex="4"
            onAction="#clickClearAll"/>
    <Button text="Send" GridPane.rowIndex="3" GridPane.columnIndex="0"
            onAction="#clickSend"/>
    <TextArea fx:id="textArea" GridPane.columnIndex="0" prefWidth="400"/>
    <TextField fx:id="textField" GridPane.rowIndex="4" GridPane.columnIndex="0" onAction="#clickSend"/>








</GridPane>